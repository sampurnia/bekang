<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HALAMANINFO"
    android:background="#000000">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/truk"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_marginTop="0dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/truk" />

        <ImageView
            android:id="@+id/infobek"
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            android:layout_marginTop="220dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/infobek" />

        <ImageView
            android:id="@+id/infotruk"
            android:layout_width="400dp"
            android:layout_height="229dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="380dp"
            app:srcCompat="@drawable/infotruk" />
        <ImageView
            android:id="@+id/dimensi"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_marginTop="600dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/infodimensi" />
        <ImageView
            android:id="@+id/dapur"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_marginTop="850dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/infokitchen" />

        <ImageView
            android:id="@+id/vehicle"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_marginTop="1100dp"
            app:srcCompat="@drawable/infovehicle" />
    </RelativeLayout>
</ScrollView>